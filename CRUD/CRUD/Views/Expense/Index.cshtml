@model IEnumerable<CRUD.Models.Expense>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense LIst</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                <tr>
                    <td width="50%">@expense.ExpenseName</td>
                    <td width="50%">@expense.Amount</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>